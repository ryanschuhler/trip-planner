<h1>Listing trips</h1>

<% if user_signed_in? %>
    <%= current_user.email %>
    <%= user_session %>

    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

    <%= link_to 'Create a trip', new_trip_path %>

    <table>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>

      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.title %></td>
          <td><%= trip.description %></td>
          <td><%= link_to 'Show', trip_path(trip) %></td>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
          <td><%= link_to 'Delete', trip_path(trip), method: :delete, data: { confirm: 'Are you sure you want to delete this trip?' } %></td>
        </tr>
      <% end %>
    </table>
<% else %>
    <%= link_to('Login', new_user_session_path)  %>
<% end %>