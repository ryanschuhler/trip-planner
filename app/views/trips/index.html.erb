<%= render 'layouts/side_nav' %>

<div class="banner">
  <h1>Your next adventure awaits you</h1>
  <%= button_to 'Create a trip', new_trip_path, :method => :get %>
</div>

<% if user_signed_in? %>
    <table>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>

      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.title %></td>
          <td><%= trip.description %></td>
          <td><%= link_to 'Show', trip_path(trip) %></td>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
          <td><%= link_to 'Delete', trip_path(trip), method: :delete, data: { confirm: 'Are you sure you want to delete this trip?' } %></td>
        </tr>
      <% end %>
    </table>
<% else %>
    <%= link_to('Login', new_user_session_path)  %>
<% end %>

<%= render 'layouts/footer' %>