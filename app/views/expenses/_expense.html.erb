<% @trip.expenses.each do |expense| %>
  <span>
    <strong>Title:</strong>
    <%= expense.title %>
  </span>

  <span>
    <strong>Cost:</strong>
    <%= expense.cost %>
  </span>

  <span>
    <%= link_to 'Delete Expense', [expense.trip, expense],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </span>
<% end %>